<%= form_for(@event, html: { class: 'panel panel-default' }) do |f| %>
  <div class="panel-heading">
    <h1 class="panel-title"><strong><%= event_title_form(@event) %></strong></h1>
  </div>

  <div class="panel-body">
    <div class="form-group <%= "has-error" if f.errors_on?(:title) %>">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.error_span(:title) %>
    </div>

    <div class="form-group <%= "has-error" if f.errors_on?(:address) %>">
      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>
      <%= f.error_span(:address) %>
    </div>

    <div class="form-group <%= "has-error" if f.errors_on?(:datetime) %>">
      <%= f.label :datetime %>
      <div class="form-inline"><%= f.datetime_select :datetime, {}, class: 'form-control' %></div>
      <%= f.error_span(:datetime) %>
    </div>

    <div class="form-group <%= "has-error" if f.errors_on?(:description) %>">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
      <%= f.error_span(:description) %>
    </div>

    <div class="form-group <%= "has-error" if f.errors_on?(:pincode) %>">
      <%= f.label :pincode %>
      <%= f.text_field :pincode, class: 'form-control' %>
      <%= f.error_span(:pincode) %>
    </div>

    <div class="actions">
      <%= f.submit t('.buttons.save'), class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="panel-footer">
    <%= event_back_link(@event) %>
  </div>
<% end %>