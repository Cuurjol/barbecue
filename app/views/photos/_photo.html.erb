<div class="event-photo buffer-both">
  <% image_title = "Добавил #{render partial: 'users/user', object: photo.user}" %>

  <%= link_to image_tag(photo.photo.thumb.url), photo.photo.url, data: { lightbox: 'example-set', title: image_title } %>
  <% if current_user_can_edit?(photo) %>
    <%= link_to(
            fa_icon('trash'),
            event_photo_path(photo.event, photo),
            method: :delete,
            data: {confirm: t('.destroy_confirm')}
        ) %>
  <% end %>
</div>