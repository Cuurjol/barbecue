<!--Вывод ошибок можно реалзиовать в отдельную панель, реализовав -->
<!--свой метод my_errors_for(resource) в application_helper.rb-->
<!--https://stackoverflow.com/questions/15155890/styling-form-error-message-bootstrap-rails/27209195#27209195-->
<%#= my_errors_for(resource) %>

<%#= devise_error_messages! %>

<div class="row">
  <div class="col-xs-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'panel panel-default', method: :put }) do |f| %>
      <div class="panel-heading">
        <h1 class="panel-title"><strong>Смена пароля пользователя</strong></h1>
      </div>

      <div class="panel-body">
        <div class="form-group <%= "has-error" if f.errors_on?(:email) %>">
          <%= f.label :email %>
          <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "Ваш email", class: "form-control" %>
          <%= f.error_span(:email) %>
        </div>

        <div class="form-group <%= "has-error" if f.errors_on?(:password) %>">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Ваш новый пароль", class: "form-control" %>
          <%= f.error_span(:password) %>
          <% unless f.errors_on?(:password) %>
            <span class="help-block">
              <em>
                Оставьте поле пустым, если вы не хотите изменять пароль. Минимум <%= t('characters_count',  count: @minimum_password_length) %>
              </em>
            </span>
          <% end %>
        </div>

        <div class="form-group <%= "has-error" if f.errors_on?(:password_confirmation) %>">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Введите новый пароль", class: "form-control" %>
          <%= f.error_span(:password_confirmation) %>
        </div>

        <div class="form-group <%= "has-error" if f.errors_on?(:current_password) %>">
          <%= f.label :current_password %>
          <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Введите старый пароль", class: "form-control" %>
          <%= f.error_span(:current_password) %>
          <% unless f.errors_on?(:current_password) %>
            <span class="help-block">
              <em>Введите старый пароль для подтверждения ваших изменений</em>
            </span>
          <% end %>
        </div>

        <div class="actions">
          <%= f.submit "Обновить пароль", class: "btn btn-default" %>
        </div>
      </div>

      <div class="panel-footer">
        <%= link_to "Удалить пользователя", registration_path(resource_name),
                      data: { confirm: "Вы уверены, что хотите удалить пользователя?" }, method: :delete %><br />
        <%= link_to "Вернуться к профилю", edit_user_path(@user) %>
        <%#= link_to "Back", :back %>
        <%#= link_to "Back", 'javascript:history.back()' %>
      </div>
    <% end %>
  </div>
</div>