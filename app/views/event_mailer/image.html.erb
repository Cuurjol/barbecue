<h1><%= t '.title' %></h1>

<% if Rails.env.production? %>
<!--  <%#= link_to image_tag(@photo.photo.url), @photo.photo.url %></p>-->
  <%= image_tag(@photo.photo.url) %>
<% else %>
  <p><%= image_tag attachments['image.jpg'].url %></p>
<% end %>

<p><%= t '.author' %>: <strong><%= @photo.user.name %></strong></p>
<hr/>

<%= t '.event' %>
<h3><%= @event.title %></h3>

<%= t '.datetime' %>
<h4><%= l @event.datetime %></h4>

<%= t '.owner' %>
<h4><%= @event.user.name %></h4>